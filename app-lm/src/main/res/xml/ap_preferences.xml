<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="lm_enabled"
        android:summary="Enable Wifi AP, auto-discovery and connect"
        android:title="Wifi Mesh" />

    <!-- To test battery use -->
    <SwitchPreference
        android:defaultValue="false"
        android:key="ap_unconditional"
        android:summary="Enable Wifi AP on the schedule, regardless of other APs"
        android:title="AP forced periodic" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="periodic_scan"
        android:summary="Periodic scans enabled"
        android:title="Periodic scans" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="lm_fg"
        android:summary="Foreground (more battery)"
        android:title="Foreground service" />

    <EditTextPreference
        android:defaultValue="600"
        android:inputType="number"
        android:key="ap_on"
        android:maxLines="1"
        android:singleLine="true"
        android:summary="How long to keep the AP active."
        android:title="AP active time" />

    <EditTextPreference
        android:defaultValue="1800"
        android:inputType="number"
        android:key="ap_off"
        android:singleLine="true"
        android:summary="Time between AP starts. If 0, don't start the AP"
        android:title="AP interval" />

    <ListPreference
        android:defaultValue="3"
        android:entries="@array/mode_entries"
        android:entryValues="@array/mode_values"
        android:key="ap_mode"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="AP mode" />

    <ListPreference
        android:defaultValue="3"
        android:entries="@array/wifi_mode_entries"
        android:entryValues="@array/wifi_mode_values"
        android:key="wifi_mode"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Wifi mode" />
    <EditTextPreference
        android:defaultValue="30"
        android:inputType="number"
        android:key="rescan_no_connection"
        android:singleLine="true"
        android:summary="Time between periodic scans, if not connected"
        android:title="Disconnected Scan" />

    <EditTextPreference
        android:defaultValue="300"
        android:inputType="number"
        android:key="rescan_connection"
        android:singleLine="true"
        android:summary="Time between periodic scans, if connected"
        android:title="Connected Scan" />

