<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ap_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="2dp"
    app:contentPadding="2dp"
    app:layout_constraintBottom_toTopOf="parent"
    card_view:cardBackgroundColor="@color/cardview_shadow_start_color"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--            <android.support.v7.widget.Toolbar
                    android:id="@+id/ap_card_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:popupTheme="@style/AppTheme.PopupOverlay" />
                    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

        <Switch
            android:id="@+id/dm_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mesh " />

        <Switch
            android:id="@+id/vpn_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="External VPN " />

        <Switch
            android:id="@+id/ap_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wifi mesh expansion (AP)" />


        <TextView
            android:id="@+id/con_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/if_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/msg_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Switch
            android:id="@+id/disc_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discovery"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    </LinearLayout>
    <!-- </ScrollView>
 -->
</android.support.v7.widget.CardView>


