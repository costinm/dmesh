                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Switch
                    android:id="@+id/disc_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Discovery"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

